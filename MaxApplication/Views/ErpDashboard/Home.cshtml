    <style>
        body {
            font-family: 'Trebuchet MS', 'Source Sans Pro', 'Helvetica Neue', Helvetica, Arial, sans-serif;
            font-weight: 400;
        }

        .highlighted-menu {
            background-color: #f0f4ff; /* A softer, pastel blue for a modern look */
            border-radius: 5px; /* Keep the rounded corners for a polished appearance */
            padding: 5px; /* Retain padding for better spacing */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Optional: Add a subtle shadow for depth */
            transition: background-color 0.3s ease; /* Smooth transition for background color change */
        }

        .header {
            background-color: #007bff;
            color: white;
            padding: 15px;
        }

        .module-card {
            padding: 20px;
            text-align: center;
            border-radius: 8px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease, transform 0.3s ease; /* Added background-color transition */
            color: #555;
            background-color: #ebf5fb;
        }

            .module-card:hover {
                transform: scale(1.05);
                background-color: skyblue; /* Change background color on hover */
            }


        /*  .module-card:hover {
                        transform: scale(1.05);
                    } */

        .module-image {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .module-title {
            font-weight: bold;
            margin-top: 5px;
        }
        /* Initially hide the div that will show the message */
        .change-password-message {
            display: none;
            position: absolute;
            background-color: #f1f1f1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            top: 0;
            left: 100%;
            margin-left: 10px;
        }

        .card-body {
            transition: background-color 0.3s ease; /* Smooth transition */
        }

            .card-body:hover {
                background-color: skyblue; /* Change background color on hover */
            }

        .table-custom {
            background-color: #f8f9fa; /* Light background */
            border-radius: 10px; /* Rounded corners */
            overflow: hidden;
        }

        .table th {
            background-color: #007bff; /* Primary color for table header */
            color: white; /* White text */
            text-align: center; /* Center header text */
            font-weight: bold; /* Bold text */
            text-transform: none; /* Ensure proper case is maintained */
        }

        .table td {
            text-align: center; /* Center data */
            vertical-align: middle; /* Align vertically */
        }

        /* Add hover effect on rows */
        .table tbody tr:hover {
            background-color: #e2e6ea; /* Light gray on hover */
        }

        /* Styling for hyperlinks */
        a {
            text-decoration: none;
            color: #007bff; /* Blue for links */
        }

            a:hover {
                text-decoration: underline;
            }

        .table-container {
            width: 100%; /* Full width */
            max-height: 500px; /* Set max height for vertical scrolling */
            overflow-y: auto; /* Enable vertical scroll */
            overflow-x: auto; /* Enable horizontal scroll if needed */
            border: 1px solid #ccc; /* Optional: Add a border */
        }

        table {
            width: 100%; /* Make table width 100% */
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }


        .table-container-scrollable {
            max-height: 400px; /* Set a maximum height for the table */
            overflow-y: auto; /* Enable vertical scrolling */
            overflow-x: auto; /* Enable horizontal scrolling if necessary */
            border: 1px solid #ccc; /* Optional: Add a border to the container */
            border-radius: 5px; /* Optional: Add rounded corners */
        }

        .table-custom {
            margin-bottom: 0; /* Remove extra margin at the bottom */
        }

        .table thead th {
            position: sticky;
            top: 0; /* Keep the header fixed at the top */
            background-color: #007bff; /* Same header background */
            z-index: 1; /* Ensure the header is above table rows */
        }

        .table tbody tr:hover {
            background-color: unset; /* Disable hover effect for table rows */
        }

        .card-body:hover:not(.table-container-scrollable) {
            background-color: skyblue; /* Keep hover effect for card body except for the table */
        }
    </style>
</head>
